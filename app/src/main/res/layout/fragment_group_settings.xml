<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e8e7"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GroupSettingsFragment">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        android:padding="3dp"
        android:background="@drawable/imgshape"
        android:id="@+id/groupLogo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/inputshapegroup"
        app:layout_constraintHeight_percent="0.1"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupLogo"
        android:layout_marginStart="20dp"
        android:hint="Grup adı"
        android:paddingStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/input"/>
    
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.075"
        android:layout_marginBottom="20dp"
        android:background="@drawable/butonshapebuton"
        android:text="Grubu oluştur"
        android:id="@+id/button"/>





</androidx.constraintlayout.widget.ConstraintLayout>